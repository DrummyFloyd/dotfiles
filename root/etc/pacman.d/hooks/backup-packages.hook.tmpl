[Trigger]
Operation = Install
Operation = Remove
Type = Package
Target = *

[Action]
When = PostTransaction
Exec = /bin/sh -c 'echo "archPackages:" > /home/{{ .non_root_user }}/.local/share/chezmoi/home/.chezmoidata/arch/packages.yaml && /usr/bin/pacman -Qqe | sed "s/^/  - /" >> /home/{{ .non_root_user }}/.local/share/chezmoi/home/.chezmoidata/arch/packages.yaml'
